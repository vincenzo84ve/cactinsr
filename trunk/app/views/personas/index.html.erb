<h1>Listing personas</h1>

<table>
  <tr>
    <th><%= sortable "Cedula" %></th>
    <th><%= sortable "Nombre" %></th>
    <th><%= sortable "Apellido" %></th>
    <th><%= sortable "Cargo" %></th>
    <th><%= sortable "Carea_id", "Área" %></th>
    <th><%= sortable "Ubicacione_id", "Ubicación" %></th>
  </tr>

<% @personas.each do |persona| %>
  <tr>
    <td><%=h persona.cedula %></td>
    <td><%=h persona.nombre %></td>
    <td><%=h persona.apellido %></td>
    <td><%=h persona.cargo %></td>
    <td><%=h persona.carea.nombre %></td>
    <td><%=h persona.ubicacione.descripcion %></td>
    <td><%= link_to 'Show', persona %></td>
    <td><%= link_to 'Edit', edit_persona_path(persona) %></td>
    <td><%= link_to 'Destroy', persona, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New persona', new_persona_path %>