<h3>Listando Activos Asignados</h3>

<table>
  <tr>
    <th>Activo</th>
    <th>Modelo</th>
    <th>Serial</th>
    <% if current_page?(:action => 'show') %>
      <th>Activo</th>
    <% end %>
  </tr>

<% @asignados.each do |linea| %>
  <tr>
    <td><%=h linea.existencia.activo.descripcion %></td>
    <td><%=h linea.existencia.activo.modelo %></td>
    <td><%=h linea.existencia.serial %></td>
    <td><%=h link_to_remote 'Borrar', :update => 'lineas_asignados', :url => lineas_asignado_url(:id => linea.id), :method => :delete, :confirm => "Â¿Esta seguro?" %></td>
  </tr>
<% end %>
</table>