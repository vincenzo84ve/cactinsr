<% form_for(@asignado) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :fecha %><br />
    <%= calendar_date_select_tag "asignado[fecha]", Date.today("GREGORIAN").to_s+" 00:00", :time => true %>
  </p>
  <p>
    <%= f.label :persona_id %><br />
    <%= collection_select(:asignado, :persona_id, @personas, :id, :nombre_apellido) %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

