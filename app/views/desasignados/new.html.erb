<% form_for(@desasignado) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :fecha %><br />
    <%= calendar_date_select_tag "desasignado[fecha]", Date.today("GREGORIAN").to_s+" 00:00", :time => true %>
  </p>
  <p>
    <%= f.label :asignado_id, "AsignaciÃ³n:" %><br />
    <%= text_field_tag :asignado_id, @desasignado.asignado_id, :disabled => true %>
